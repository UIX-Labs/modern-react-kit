{
  "name": "modern-react-kit",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "format": "biome format . --write",
    "fix:staged": "biome check --write --unsafe $(git diff --cached --name-only --diff-filter=ACMR)",
    "lint:staged": "biome check $(git diff --cached --name-only --diff-filter=ACMR)",
    "format:staged": "biome format --write $(git diff --cached --name-only --diff-filter=ACMR)",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.10",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@tanstack/react-router": "^1.121.21",
    "@tanstack/react-router-devtools": "^1.121.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.517.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.4",
    "@tanstack/router-plugin": "^1.121.22",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "tw-animate-css": "^1.3.4",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  }
